<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.0;netcoreapp2.1;netcoreapp3.0</TargetFrameworks>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" Condition="'$(TargetFramework)' == 'netcoreapp3.0'"/>
    <None Remove="Resources\ServiceCaller.ts" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resources\ServiceCaller.ts" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="1.9.71" />
    <PackageReference Condition="'$(TargetFramework)' == 'netcoreapp3.0'" Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Condition="'$(TargetFramework)' != 'netcoreapp3.0'" Include="Newtonsoft.Json" Version="10.0.3" />
    <PackageReference Include="TypeLite" Version="1.8.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\TypeScriptDefinitionsGenerator.Common\TypeScriptDefinitionsGenerator.Common.csproj" />
  </ItemGroup>
</Project>